{
  "name": "fire-sale",
  "version": "0.0.1",
  "description": "A Markdown-to-HTML renderer",
  "main": "lib/main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-packager . 'Fire Sale' --platform=all --arch=all --version=0.36.8",
    "build-css": "node-sass --include-path scss scss/main.scss lib/css/main.css",
    "watch-css": "nodemon -e scss -x \"npm run build-css\""
  },
  "keywords": [
    "electron",
    "markdown"
  ],
  "author": "Pam, Hugh, Becca",
  "license": "MIT",
  "devDependencies": {
    "devtron": "^1.3.0",
    "electron-packager": "^8.1.0",
    "electron-prebuilt": "^1.4.3",
    "spectron": "^3.4.0"
  },
  "dependencies": {
    "colors-palette": "0.0.4",
    "electron-reload": "^1.2.0",
    "jquery": "^3.1.1",
    "marked": "^0.3.5",
    "menubar": "^5.2.3",
    "node-sass": "^4.5.3",
    "nodemon": "^1.11.0"
  }
}
